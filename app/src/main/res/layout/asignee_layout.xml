<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <co.za.appic.teammanager.helpers.RoundLoadingImageView
                android:id="@+id/imgProfpic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:corner_radius="23"
                app:loaderType="BallPulseIndicator"
                app:loaderColor="@color/lightestText"
                app:loaderWidth="16"
                app:defImage="@drawable/ic_profpic_dark"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profpic_dark"/>

            <TextView
                android:id="@+id/txtEmployeeName"
                style="@style/mediumDarkLabel"
                android:layout_toRightOf="@+id/imgProfpic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Employee name"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>