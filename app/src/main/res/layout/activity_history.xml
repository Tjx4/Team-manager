<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.history.HistoryActivity">
        <TextView
            android:id="@+id/tvTasksTitle"
            style="@style/mediumDarkLabel"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/medium_view_padding"
            android:text="@string/this_is_your_work_history"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/tvTasksTitle"
            android:id="@+id/rvTaskHistory"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>