<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.profile.ProfileActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:layout_gravity="center_horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profpic_dark"
            android:layout_gravity="center"
            app:riv_corner_radius="45dp"
            android:scaleType="centerCrop"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"/>

        <TextView
            style="@style/profileLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/employee_id"/>

        <TextView
            android:id="@+id/tvEmployeeId"
            style="@style/mediumDarkLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="GW001544"/>

            <TextView
                android:id="@+id/tvName"
                style="@style/profileLabels"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Full name"/>

            <TextView
                android:id="@+id/tvSurname"
                style="@style/mediumDarkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Name Surname"/>

            <TextView
                style="@style/profileLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Rank"/>

            <TextView
                android:id="@+id/tvRank"
                style="@style/mediumDarkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="General worker"/>

            <TextView
                style="@style/profileLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="@string/gender"/>

            <TextView
                android:id="@+id/tvGender"
                style="@style/mediumDarkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Male"/>

    </GridLayout>

</FrameLayout>