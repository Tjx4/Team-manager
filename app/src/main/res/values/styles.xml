<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamManagerNoActionBarTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="SplashTheme" parent="TeamManagerNoActionBarTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="teamManagerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="xlargeLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>
    <style name="largeLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="largeWhiteLabel" parent="largeLabel">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="mediumLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="mediumWhiteLabel" parent="mediumLabel">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="smallLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="smallWhiteLabel" parent="smallLabel">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="smallErrorLabel" parent="smallLabel">
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/errorText</item>
    </style>

    <style name="teamManagerEditText">
        <item name="android:background">@drawable/def_edittext_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/small_view_padding</item>
        <item name="android:paddingRight">@dimen/small_view_padding</item>
    </style>
    <style name="mediumEditText" parent="teamManagerEditText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_height">@dimen/medium_view_height</item>
    </style>
    <style name="mediumLightEditText" parent="mediumEditText">
        <item name="android:background">@drawable/light_edittext_background</item>
        <item name="android:textColor">@color/lightestText</item>
        <item name="android:textColorHint">@color/lightText</item>
    </style>
    <style name="mediumDarkEditText" parent="mediumEditText">
        <item name="android:background">@drawable/dark_edittext_background</item>
        <item name="android:textColor">@color/darkestText</item>
    </style>

    <style name="teamManagerButton">
        <item name="android:background">@drawable/def_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_view_padding</item>
        <item name="android:paddingRight">@dimen/small_view_padding</item>
    </style>
    <style name="mediumTeamManagerButton" parent="teamManagerButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_height">@dimen/medium_view_height</item>
    </style>
    <style name="mediumGreenButton" parent="mediumTeamManagerButton">
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="lightLabelButton" parent="mediumTeamManagerButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/lightestText</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>